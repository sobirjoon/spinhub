<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

    <body>
        <%- include('partials/header-alt') %>

            <section>
                <div class="container my-5 py-5">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-12 col-lg-10">
                        <div class="card text-dark">

                            <div class="card py-2 align-items-center">
                            <div class="card-body p-2 align-items-center">
                                <h4 class="mb-2">
                                    <%= data.album_title %>
                                </h4>
                                <br>
                                <img src="<%= data.img_url %>" class="rounded" alt="cover"
                                    style="width: 250px; height: 300px;">
                                <br>
                                <br>
                                <p class="font-monospace"><strong>Title:</strong>
                                    <%= data.album_title %>
                                </p>
                                <p class="font-monospace"><strong>Artist: </strong>
                                    <%= data.artist %>
                                </p>
                                <p class="font-monospace"><strong>Genre: </strong>
                                    <%= data.name %>
                                </p>
                                <p class="font-monospace"><strong>Year: </strong>
                                    <%= data.year %>
                                </p>

                                <hr>
                                <p class="font-monospace"><strong>Tracklist: </strong></p>

                                <% tracklist.forEach((row)=> { %>
                                <p class="font-monospace" style="font-size: small; " ><%= row.title %></p>
                                <% }); %>

                                <hr>
                                <% if (user) { %>
                                <form action='/postreview'method='POST'>
                                    <div class="form-floating">
                                        <textarea name="reviewField" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                                        <label for="floatingTextarea2">Reviews</label>
                                        <input type='hidden'value='<%= data.album_id %>'name='albumidField'>
                                        <br>
                                        <input class="btn btn-primary" type="submit" value="Submit" name="comment">
                                    </div>
                                </form>
                                <%}%>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </section>
            <section style="background-color: #f7f6f6;">
            <div class="container my-5 py-5 text-dark">
                <div class="row d-flex justify-content-center">
                <div class="col-md-12 col-lg-10 col-xl-8">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="text-dark mb-0">Reviews</h4>
                    </div>
                    <% reviews.forEach((row)=> { %>
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex flex-start">

                            <div class="w-100">
                                <div class="d-flex justify-content-between align-items-center mb-3">

                                    <h6 class="text-primary fw-bold mb-0">
                                    <%= row.username %>
                                    <span class="text-dark ms-2"><%= row.content %></span>
                                </h6>
                                <p class="mb-0"></p>
                                </div>

                            </div>
                            </div>
                        </div>

                        </div>
                    <% }); %>
                </div>
                </div>
            </div>
            </section>


            </div>
            </main>
            </section>

            <%- include('partials/footer') %>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
                    crossorigin="anonymous"></script>
    </body>

</html>