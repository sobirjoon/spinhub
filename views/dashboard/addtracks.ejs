<!DOCTYPE html>
<html lang="en">
  <%- include('dashboard/head') %>
<body>

  <%- include('dashboard/sidebar') %>

  <div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-white" style="width: 40%;">
    <div class="d-flex align-items-center flex-shrink-0 p-2 link-dark text-decoration-none border-bottom d-grid gap-2">
      <svg class="bi pe-none me-2" width="30" height="24"><use xlink:href="#bootstrap"/></svg>
      <span class="fs-5 fw-semibold"><%= message %></span>
      <a href="/dashboard/manage/" class="btn btn-outline-secondary btn-sm d-md-flex justify-content-md-end">Add album</a>
    </div>

    <div class="card-body p-2 align-items-stretch list-group list-group-flush border-bottom scrollarea">
      <h4 class="mb-2">
          <%= data.album_title %>
      </h4>
      <br>
      <img src="<%= data.img_url %>" class="rounded" alt="cover"
          style="width: 250px; height: 300px;">
      <br>
      <br>
      <p class="font-monospace"><strong>Title:</strong>
          <%= data.album_title %>
      </p>
      <input type="hidden" name="album_id" value="<%= data.album_id %>">
      <p class="font-monospace"><strong>Artist: </strong>
          <%= data.artist %>
      </p>
      <p class="font-monospace"><strong>Genre: </strong>
          <%= data.name %>
      </p>
      <p class="font-monospace"><strong>Year: </strong>
          <%= data.year %>
      </p>

      <hr>
      <p class="font-monospace"><strong>Tracklist: </strong></p>

      <% tracklist.forEach((row)=> { %>
        <p class="font-monospace" style="font-size: small; " ><%= row.title %></p>
        <form action="/dashboard/manage/deletetrack/" method="get">
          <input type="hidden" name="id" value="<%= row.id %>">
          <input type="hidden" name="album_id" value="<%= data.album_id %>">
          <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
        </form>      <% }); %>

    </div>

</div>

    <divider class="b-example-divider b-example-vr"></divider>

  <div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-white" style="width: 40%;">
    <a href="/" class="d-flex align-items-center flex-shrink-0 p-3 link-dark text-decoration-none border-bottom">
      <span class="fs-5 fw-semibold"></span>
    </a>
  <div class="container mt-5">
    <div class="row">

      <div class="col-md-12 mb-4 text-center">
        <h5>Add tracks to your album.</h5>
      </div>

      <div class="col-md-3"></div>

      <div class="col-md-6">
          <form action="/dashboard/manage/addtracks/" method="post">
            <input type="hidden" name="album_id" value="<%= data.album_id %>">
            <div class="mb-3 input-group repeatDiv" id="repeatDiv">
              <input type="text" class="form-control" name="tracks[]" placeholder="Enter Title">
            </div>

            <button type="button" class="btn btn-info" id="repeatDivBtn" data-increment="1">Add More</button>
            <hr>
            <br>
            <br>
            <button type="submit" class="btn btn-primary" id="submit">Submit</button>
          </form>

      </div>

      <div class="col-md-3"></div>
    </div>
  </div>
  </div>
</main>

      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
      <script type="text/javascript" src="/addmore.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  <script src="/sidebars.js"></script>
</body>
</html>