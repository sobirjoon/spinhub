<div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-white" style="width: 40%;">
  <div class="d-flex align-items-center flex-shrink-0 p-2 link-dark text-decoration-none border-bottom d-grid gap-2">
    <svg class="bi pe-none me-2" width="30" height="24"><use xlink:href="#bootstrap"/></svg>
    <span class="fs-5 fw-semibold"><%= message %></span>
    <a href="/dashboard/manage/" class="btn btn-outline-secondary btn-sm d-md-flex justify-content-md-end">Add album</a>
  </div>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
  </div>


  <div class="list-group list-group-flush border-bottom scrollarea">
    <% data.forEach((row)=> { %>

      <a href="/album?id=<%= row.album_id %>" class="list-group-item list-group-item-action py-3 lh-sm" aria-current="true">
        <div class="d-flex w-100 align-items-center justify-content-between">
          <strong class="mb-1"><%= row.album_title %></strong>
        </div>
        <div class="col-10 mb-1 small"><p class="card-text"><strong>by </strong><%= row.artist %>.</p><p class="font-monospace">Genre: <%= row.name %></p> </div>


        <div class="container-sm-fluid">
          <div class="col-4 mb-1 small">
              <form action="/dashboard/manage/addtracks/<%= row.album_id%>">
                <button type="submit" class="btn btn-outline-primary btn-sm">Add tracks</button>
              </form>
            </div>
          <div class="row">
          <div class="col-1 mb small">
            <form action="/dashboard/manage/update/<%= row.album_id %>">
              <button type="submit" class="btn btn-outline-primary btn-sm">Edit</button>
            </form>
          </div>
          <div class="col-1 mb small">
            <form action="/dashboard/manage/delete/<%= row.album_id %>" method="POST">
              <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
            </form>
        </div>
        </div>
        </div>


      </a>

  <% }); %>

  </div>
</div>
<div class="b-example-divider b-example-vr"></div>