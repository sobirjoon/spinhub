<div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-white" style="width: 40%;">
  <a href="/" class="d-flex align-items-center flex-shrink-0 p-3 link-dark text-decoration-none border-bottom">
    <svg class="bi pe-none me-2" width="30" height="24"><use xlink:href="#bootstrap"/></svg>
    <span class="fs-5 fw-semibold text-primary"><%= message %> </span><span class="fs-5 fw-semibold">'s albums </span>
  </a>
  <div class="list-group list-group-flush border-bottom scrollarea">
    <% data2.forEach((row)=> { %>

      <a href="/album?id=<%= row.album_id %>" class="list-group-item list-group-item-action py-3 lh-sm" aria-current="true">
        <div class="d-flex w-100 align-items-center justify-content-between">
          <strong class="mb-1"><%= row.album_title %></strong>
        </div>
        <div class="col-10 mb-1 small"><p class="card-text"><strong>by </strong><%= row.artist %>.</p><p class="font-monospace">Genre: <%= row.name %></p> </div>
      </a>
  <% }); %>

  </div>
</div>
<div class="b-example-divider b-example-vr"></div>